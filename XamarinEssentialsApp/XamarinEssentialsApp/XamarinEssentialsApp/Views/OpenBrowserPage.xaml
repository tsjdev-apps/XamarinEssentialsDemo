             x:Class="XamarinEssentialsApp.Views.OpenBrowserPage"
             Title="Open Browser">

    <ContentPage.Content>
        <ScrollView Margin="12">
            <StackLayout>
                <Button Text="Open Website"
                        Clicked="OpenWebsiteButtonOnClicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>